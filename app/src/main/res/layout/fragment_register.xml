<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/registerRoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_xxlarge">

        <TextView
            android:id="@+id/tvJoinTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register_title"
            android:textColor="#4A5568"
            android:fontFamily="sans-serif-medium"
            android:textSize="@dimen/text_size_massive"
            android:letterSpacing="@dimen/letter_spacing_small"
            android:layout_marginTop="@dimen/spacing_top_large"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvJoinTitleAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register_title_accent"
            android:textColor="#8BA7F5"
            android:fontFamily="sans-serif-medium"
            android:textSize="@dimen/text_size_massive"
            android:letterSpacing="@dimen/letter_spacing_small"
            android:layout_marginTop="@dimen/spacing_tiny"
            app:layout_constraintTop_toBottomOf="@id/tvJoinTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/titleBarrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="tvJoinTitle,tvJoinTitleAccent"/>

        <LinearLayout
            android:id="@+id/formContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/spacing_top_medium"
            app:layout_constraintTop_toBottomOf="@id/titleBarrier"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_normal"
                app:cardCornerRadius="@dimen/card_corner_radius_small"
                app:cardElevation="@dimen/card_elevation_none"
                app:strokeWidth="@dimen/card_stroke_width_none"
                app:cardBackgroundColor="#E8E6F0">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/text_input_height"
                    android:hint="@string/hint_email_simple"
                    android:background="@null"
                    android:inputType="textEmailAddress"
                    android:textColor="#2C3E50"
                    android:textColorHint="#A5A5C0"
                    android:fontFamily="sans-serif"
                    android:paddingStart="@dimen/padding_normal"
                    android:paddingEnd="@dimen/padding_normal"
                    android:paddingTop="@dimen/padding_normal"
                    android:paddingBottom="@dimen/padding_normal"/>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_normal"
                app:cardCornerRadius="@dimen/card_corner_radius_small"
                app:cardElevation="@dimen/card_elevation_none"
                app:strokeWidth="@dimen/card_stroke_width_none"
                app:cardBackgroundColor="#E8E6F0">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/text_input_height"
                    android:hint="@string/hint_username"
                    android:background="@null"
                    android:inputType="textNoSuggestions"
                    android:textColor="#2C3E50"
                    android:textColorHint="#A5A5C0"
                    android:fontFamily="sans-serif"
                    android:paddingStart="@dimen/padding_normal"
                    android:paddingEnd="@dimen/padding_normal"
                    android:paddingTop="@dimen/padding_normal"
                    android:paddingBottom="@dimen/padding_normal"/>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_normal"
                app:cardCornerRadius="@dimen/card_corner_radius_small"
                app:cardElevation="@dimen/card_elevation_none"
                app:strokeWidth="@dimen/card_stroke_width_none"
                app:cardBackgroundColor="#E8E6F0">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/text_input_height"
                        android:hint="@string/hint_password_simple"
                        android:background="@null"
                        android:inputType="textPassword"
                        android:textColor="#2C3E50"
                        android:textColorHint="#A5A5C0"
                        android:fontFamily="sans-serif"
                        android:paddingStart="@dimen/padding_normal"
                        android:paddingEnd="@dimen/spacing_top_medium"
                        android:paddingTop="@dimen/padding_normal"
                        android:paddingBottom="@dimen/padding_normal"/>

                    <ImageButton
                        android:id="@+id/btnTogglePassword"
                        android:layout_width="@dimen/icon_size_normal"
                        android:layout_height="@dimen/icon_size_normal"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/spacing_small"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_lock"
                        android:tint="#A5A5C0"
                        android:contentDescription="Toggle password visibility"/>
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_normal"
                app:cardCornerRadius="@dimen/card_corner_radius_small"
                app:cardElevation="@dimen/card_elevation_none"
                app:strokeWidth="@dimen/card_stroke_width_none"
                app:cardBackgroundColor="#E8E6F0">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etConfirmPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/text_input_height"
                        android:hint="@string/hint_confirm_password"
                        android:background="@null"
                        android:inputType="textPassword"
                        android:textColor="#2C3E50"
                        android:textColorHint="#A5A5C0"
                        android:fontFamily="sans-serif"
                        android:paddingStart="@dimen/padding_normal"
                        android:paddingEnd="@dimen/spacing_top_medium"
                        android:paddingTop="@dimen/padding_normal"
                        android:paddingBottom="@dimen/padding_normal"/>

                    <ImageButton
                        android:id="@+id/btnToggleConfirmPassword"
                        android:layout_width="@dimen/icon_size_normal"
                        android:layout_height="@dimen/icon_size_normal"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/spacing_small"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_lock"
                        android:tint="#A5A5C0"
                        android:contentDescription="Toggle password visibility"/>
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/card_corner_radius_small"
                app:cardElevation="@dimen/card_elevation_none"
                app:strokeWidth="@dimen/card_stroke_width_none"
                app:cardBackgroundColor="#E8E6F0">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etNickname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/text_input_height"
                    android:hint="@string/hint_nickname"
                    android:background="@null"
                    android:inputType="textNoSuggestions"
                    android:textColor="#2C3E50"
                    android:textColorHint="#A5A5C0"
                    android:fontFamily="sans-serif"
                    android:paddingStart="@dimen/padding_normal"
                    android:paddingEnd="@dimen/padding_normal"
                    android:paddingTop="@dimen/padding_normal"
                    android:paddingBottom="@dimen/padding_normal"/>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRegister"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height_xlarge"
            android:layout_marginTop="@dimen/spacing_colossal"
            android:layout_marginBottom="@dimen/spacing_colossal"
            android:text="@string/btn_create_account"
            android:textAllCaps="false"
            android:fontFamily="sans-serif-medium"
            android:textSize="@dimen/text_size_large"
            android:textColor="#FFFFFF"
            android:includeFontPadding="false"
            app:cornerRadius="@dimen/button_corner_radius_xlarge"
            app:backgroundTint="#8BA7F5"
            android:elevation="@dimen/card_elevation_small"
            app:layout_constraintTop_toBottomOf="@id/formContainer"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
