<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_default"
    app:cardCornerRadius="@dimen/card_corner_radius_medium"
    app:cardElevation="@dimen/card_elevation_small"
    app:strokeWidth="@dimen/card_stroke_width_none"
    app:cardBackgroundColor="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/padding_normal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvAvatar"
            android:layout_width="@dimen/button_height_small"
            android:layout_height="@dimen/button_height_small"
            android:gravity="center"
            android:text="E"
            android:fontFamily="sans-serif-medium"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/text_size_title"
            android:background="@drawable/bg_circle_avatar"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/spacing_default"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="example4"
                android:textColor="#2C3E50"
                android:fontFamily="sans-serif-medium"
                android:textSize="@dimen/text_size_large" />

            <TextView
                android:id="@+id/tvUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@example4"
                android:textColor="#9CA3AF"
                android:fontFamily="sans-serif"
                android:textSize="@dimen/text_size_normal"
                android:layout_marginTop="@dimen/line_spacing_extra" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvMeBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="YOU"
            android:fontFamily="sans-serif-medium"
            android:textSize="@dimen/text_size_tiny"
            android:textColor="#8BA7F5"
            android:paddingStart="@dimen/spacing_small"
            android:paddingEnd="@dimen/spacing_small"
            android:paddingTop="@dimen/spacing_tiny"
            android:paddingBottom="@dimen/spacing_tiny"
            android:background="@drawable/bg_badge_purple"
            android:visibility="gone"/>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
